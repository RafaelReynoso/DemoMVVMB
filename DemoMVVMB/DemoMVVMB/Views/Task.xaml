<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DemoMVVMB.Views.Task">
    <ContentPage.Content>
        <StackLayout Padding="50">

            <Label Text="Title"></Label>
            <Entry FontSize="Title" Placeholder="Title"
                   Text="{Binding Title}"></Entry>

            <Label Text="Description"></Label>
            <Entry FontSize="Title" Placeholder="Description"
                   Text="{Binding Description}"></Entry>

            <Label Text="Status"></Label>
            <Entry FontSize="Title" Placeholder="Status"
                   Text="{Binding Status}"></Entry>

            <Button Text="Save" Command="{Binding Save}"></Button>
            <Button Text="Get"></Button>

            <ListView ItemsSource="{Binding Task}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding Title}"></Label>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>